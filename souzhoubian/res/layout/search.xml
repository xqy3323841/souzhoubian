<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_title_bar"


            >
        <ImageButton android:id="@+id/search_go_back"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:src="@drawable/ic_nav_back"

                     android:layout_margin="5dp"
                     android:background="@drawable/search"

                />
        <EditText android:id="@+id/search_editText"
                  android:layout_width="240dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:hint="请输入要搜索的内容"
                />
        <ImageButton android:id="@+id/getsearch"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:background="@drawable/search"
                     android:src="@drawable/abs__ic_search"
                     android:layout_margin="5dp"
                />

    </RelativeLayout>
    <ListView android:id="@+id/search_listview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:divider="#ff292929"
              android:dividerHeight="1dp"
              android:background="#ffffff"
              android:cacheColorHint="#00000000"
            > </ListView>
</LinearLayout>